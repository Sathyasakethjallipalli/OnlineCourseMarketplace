@model User
@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>
<form asp-action="Login" method="post">
    <label>Username:</label>
    <input name="Username" />
    <label>Password:</label>
    <input name="Password" type="password" />
    <button type="submit">Login</button>
</form>
@if(ViewBag.Error != null){
    <div>@ViewBag.Error</div>
}